@page
@model OrganoPlenoApp.Pages.Organs.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Organ</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Organ.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Organ.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Organ.Divisions)
        </dt>
        <dd>
            <table class="table">
                <tr><th>Name</th><th>Number of Stops</th></tr>
                @{foreach (var p in Model.Organ.Divisions)
                    {
                        <tr>
                            <td><a asp-page="/Divisions/Details" asp-route-id="@p.ID">@p.Name</a></td>
                            <td>&nbsp;&nbsp; @Html.DisplayFor(model => p.NumberOfStops)</td>
                        </tr>
                    }
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Organ.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
