@page
@model OrganoPlenoApp.Pages.Pipes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Pipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Pipe.ID" />
            <div class="form-group">
                <label asp-for="Pipe.Name" class="control-label"></label>
                <input asp-for="Pipe.Name" class="form-control" />
                <span asp-validation-for="Pipe.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pipe.Category" class="control-label"></label>
                @Html.DropDownList("Pipe.Category", Html.GetEnumSelectList(typeof(Models.PipeEnumProperties.Category)), new { @class = "form-control" })
                <span asp-validation-for="Pipe.Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pipe.Specification" class="control-label"></label>
                @Html.DropDownList("Pipe.Specification", Html.GetEnumSelectList(typeof(Models.PipeEnumProperties.Specification)), new { @class = "form-control" })
                <span asp-validation-for="Pipe.Specification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pipe.Material" class="control-label"></label>
                @Html.DropDownList("Pipe.Material", Html.GetEnumSelectList(typeof(Models.PipeEnumProperties.Material)), new { @class = "form-control" })
                <span asp-validation-for="Pipe.Material" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pipe.Price" class="control-label"></label>
                <input asp-for="Pipe.Price" class="form-control" />
                <span asp-validation-for="Pipe.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pipe.Year" class="control-label"></label>
                <input asp-for="Pipe.Year" class="form-control" />
                <span asp-validation-for="Pipe.Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pipe.DivisionID" class="control-label"></label>
                <select asp-for="Pipe.DivisionID" class="form-control" asp-items="ViewBag.DivisionID"></select>
                <span asp-validation-for="Pipe.DivisionID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
