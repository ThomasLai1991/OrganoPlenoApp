@page
@model OrganoPlenoApp.Pages.Divisions.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Division</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Division.Organ)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Division.Organ.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Division.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Division.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Division.NumberOfStops)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Division.NumberOfStops)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Division.Pipes)
        </dt>
        <dd>
            <table class="table">
                <tr><th>Spec</th><th>Name</th></tr>
                @{foreach (var p in Model.Division.Pipes)
                    {
                        <tr>
                            <td>@Html.DisplayFor(model => p.Specification)</td>
                            <td><a asp-page="/Pipes/Details" asp-route-id="@p.ID">@p.Name</a></td>
                        </tr>
                    }
                }
            </table>
        </dd>

    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Division.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
